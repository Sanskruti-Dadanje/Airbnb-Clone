



<% layout("/layouts/boilerplate")%>
<body>
    

<div class="row row-cols-lg-6 row-cols-md-2 row-cols-sm-1 mt-3 sanskruti ">
        <% for (let listing of allListings) { %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card col listing-card">
               


                 <% if (listing.image && listing.image.url) { %>
    
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:10rem; margin-right: 10px;"/>
  
<% } else { %>
    <img src="/default-image.jpg" class="card-img-top" alt="No image available" style="height:20rem"/>
<% } %>
                 
                
                 <div class="card-img-overlay"></div>   
                <div class="card-body">
                  <p class="card-text">
                    <b><%=listing.title%></b><br>
                    <%=listing.price.toLocaleString("en-IN")%>/night
                    <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                </p>
                </div>
              </div>
            </a>
              <%}%>
            

    </div>

    <br><br><br><br><br><br>

